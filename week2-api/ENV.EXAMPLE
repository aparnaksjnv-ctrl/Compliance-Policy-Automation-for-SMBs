# Week2 API Environment
PORT=5000
# MongoDB Atlas connection string
MONGO_URI=
# JWT secret for signing tokens
JWT_SECRET=change-me
# CORS origin for frontend (e.g., Netlify URL)
CORS_ORIGIN=http://localhost:5174
# Optional: force in-memory DB (true/false). If empty and MONGO_URI not set, falls back to in-memory.
USE_INMEMORY_DB=
# Optional: persist the in-memory DB to disk (no admin required). Relative path is resolved from week2-api/ cwd.
MEMORY_DB_PERSIST_PATH=.mongo-data
# 32-byte hex key (optional for future encrypted fields)
FIELD_ENCRYPTION_KEY=
# Optional: AI generation
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Stripe (test mode)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_PRICE_ID=
STRIPE_WEBHOOK_SECRET=
STRIPE_SUCCESS_URL=http://localhost:5174/?billing=success
STRIPE_CANCEL_URL=http://localhost:5174/?billing=cancel
STRIPE_PORTAL_RETURN_URL=http://localhost:5174/settings

# Demo mode: simulate billing without real keys (for local demos)
STRIPE_DEMO_MODE=false
